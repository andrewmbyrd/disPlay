<% if current_user.following?(user) %>
  <%= form_for relationship_for(user), method: :delete do |f| %>
    <%= f.submit "Unfollow", class: "btn btn-danger pull-right" %>
  <% end %>
<% else %>
  <%= form_for(current_user.active_relationships.build) do |f| %>
    <div><%= hidden_field_tag :followed_id, user.id %></div>
    <%= f.submit "Follow", class: "btn btn-primary pull-right" %>
  <% end %>
<% end %>
