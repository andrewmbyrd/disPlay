<div class="search">
  <h3>A search bar will go here</h3>
</div>

<div class="col-md-3 my-followings">
  <h3>People you follow:</h3>
  <% current_user.following.all.each do |user| %>
    <div class="following">
      <%= image_tag user.gravatar_url, size: 30 %>
      <p><%= link_to user.username, library_path(user.library.id) %></p>
      <%= form_for current_user.active_relationships.find_by(followed_id: user.id), method: :delete do |f| %>
        <%= f.submit "Unfollow", class: "btn btn-danger pull-right" %>
      <% end %>
    </div>
  <% end %>
  <div class="suggested">
    <h3>Popular Users</h3>
    <% @users.all.each do |user| %>
      <% if user != current_user %>
        <div class="popular-user">
          <%= image_tag user.gravatar_url, size: 30 %>
          <p><%= link_to user.username, library_path(user.library.id) %></p>
          <% if current_user.following?(user) %>
            <%= form_for current_user.active_relationships.find_by(followed_id: user.id), method: :delete do |f| %>
              <%= f.submit "Unfollow", class: "btn btn-danger pull-right" %>
            <% end %>
          <% else %>
            <%= form_for(current_user.active_relationships.build) do |f| %>
              <div><%= hidden_field_tag :followed_id, user.id %></div>
              <%= f.submit "Follow", class: "btn btn-primary pull-right" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="col-md-6 events">
  <h3>Recent Activity</h3>
  <% @events.all.each do |event| %>
    <%= image_tag event.user.gravatar_url, size: 30 %>
    <p class="event-summary">
      <%= link_to event.user.username, library_path(event.user.library.id)%>
      <%= event.action %>
      <%= link_to event.game_purchase.game.title, library_game_purchase_path(event.user.library.id, event.game_purchase.id) %>
    </p>
  <% end %>
</div>
