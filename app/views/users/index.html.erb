<div class="user-container row">
  <h3>People you follow</h3>
  <% current_user.following.each do |followed| %>
    <div class="user-listing col-sm-1">
      <%= image_tag followed.gravatar_url, size: 40 %>
      <%= link_to followed.username, users_show_path(followed.id) %>
    </div>
  <% end %>
</div>

<div class="row user-container">
  <h3>All Users</h3>
  <% User.all.each do |user| %>
  <div class="user-listing col-sm-1">
    <%= image_tag user.gravatar_url, size: 40 %>
    <%= link_to user.username, users_show_path(user.id) %>
  </div>
<% end %>

</div>
